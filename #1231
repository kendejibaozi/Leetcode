class Solution {
    public int maximizeSweetness(int[] sweetness, int k) {
        
        int totalsweet = 0;
        for (var x : sweetness) {
            totalsweet += x;
        }
        if (k == 0)
            return totalsweet;
        int avr = totalsweet / k;
        int left = 1, right = avr;
        while (left <= right) {
            int mid = left + (right - left) / 2;
            if (check(sweetness, mid, k + 1)) left = mid + 1;
            else right = mid - 1;
        }
        return right;
    }

    private boolean check(int[] sweetness, int target, int k) {
        int count = 0, s = 0;
        for (var x : sweetness) {
            s += x;
            if (s >= target) {
                count++;
                s = 0;
            }
        }
        return count >= k;
    }
}
